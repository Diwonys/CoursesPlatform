<section class="container-orders create-product-container container-myself-info">
    <div class="container-order back-blur">

        <h2>Детали <span>@Model.Topic</span></h2>
        <div class="lessons-content">
            @foreach (var item in Model.Content)
            {
                @if (item is Image)
                {
                    <div class="body-img mx-auto">

                        <div class="cover">
                            <img src="@item.GetContent()" alt="" class="card-img">
                        </div>
                    </div>
                }
                else if (item is Paragraph)
                {
                    <p class="description">
                        @item.GetContent()
                    </p>
                }
            }
        </div>
        <div class="form-btn-details form-group">
            <div class="d-inline">
                <a asp-action="Index" asp-route-courseId="@Model.CourseId" class="input-back">Вернуться назад</a>
            </div>
            <div class="d-inline">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-create btn">Изменить</a>

            </div>
        </div>
    </div>
</section>
