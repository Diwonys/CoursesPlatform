@model CoursesPlatform.Models.Teacher.Course.Course;

<h3>Вы уверены что хотите покинуть курс?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CourseCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseCategory.Name)
        </dd class>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd class>
    </dl>
    
    <form asp-action="UnSubscribe">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="UnSubscribe" class="btn btn-danger" /> |
        <a asp-controller="PersonalArea" asp-action="SubscribedCourses">Вернуться</a>
    </form>
</div>